<Page x:Class="Kursovay2.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovay2.Views"
      xmlns:vm="clr-namespace:Kursovay2.mvvm.VM"
      mc:Ignorable="d" 
        DataContext="{DynamicResource loginVM}"
      Title="Login" 
      MouseLeftButtonDown="dragWindows"
      MinHeight="450" MaxHeight="600"  MinWidth="400" MaxWidth="450" >
    <Page.Resources>
        <vm:LoginVM x:Key="loginVM"/>
    </Page.Resources>
    <Border CornerRadius="10">
        <Border.Background >
            <ImageBrush ImageSource="\Images\дед.jpg"
                  Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="10"                    
      BorderThickness="2"
      Opacity="0.95">

            <!--стиль-->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <!--стиль-->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ЭТО ВХОД ЕБА РОТ"
                         Foreground="DarkGray"
                         FontSize="10"
                         FontFamily="Montserrat"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimize"                           
                      BorderThickness="0"
                      Content="-"
                      Foreground="White"
                      FontSize="16"
                      FontFamily="Montserrat"
                      Cursor="Hand"
                      Grid.Column="1"
                      Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                  CornerRadius="9"
                                  Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button x:Name="btnClose"                          
                      BorderThickness="0"
                      Content="X"
                      Foreground="White"
                      FontSize="12"
                      FontFamily="Montserrat"
                      Cursor="Hand"
                      Grid.Column="2"
                      Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                  CornerRadius="9"
                                  Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="220"
                      Grid.Row="1"
                      Orientation="Vertical"
                      Margin="0,35,0,0">

                    <Image Source="/Images/logo.png"
                     Width="100" Height="100"/>

                    <TextBlock Text="Словарь слэнга"
                         Foreground="White"
                         FontSize="25"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         HorizontalAlignment="Center"/>

                    <TextBlock Text="Влажные мужики"
                         Foreground="LightGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,5,0,0"/>


                    <TextBlock Text="Почта"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,35,0,0"/>

                    <TextBox x:Name="mailBox"
                       Text="{Binding mail, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="13"
                       FontWeight="Medium"
                       FontFamily="Montserrat"                            
                       Foreground="White"
                       CaretBrush="LightGray"
                       BorderBrush="DarkGray"
                       BorderThickness="0,0,0,2"
                       Height="28"
                       VerticalContentAlignment="Center"
                       Margin="0,5,0,0"
                       Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="\Images\gmail.png"
                                  Stretch="None"
                                  AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Пароль"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,15,0,0"/>

                    <PasswordBox x:Name="passwordBox"
                      
                     
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"                            
                      Foreground="White"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"                           
                      VerticalContentAlignment="Center"                          
                      Padding="20,0,0,0"
                      Height="28">

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="\Images\key.png"
                                 Stretch="None"
                                 AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>

                    <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="#D7596D"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                             
                         Margin="0,10,0,0"
                         TextWrapping="Wrap"/>

                    <Button x:Name="btnLogin" 
                      Command="{Binding SingIn}"
                      BorderThickness="0"
                      Content="ВХОД"
                      Foreground="White"
                      FontSize="12"
                      FontFamily="Montserrat"
                      Cursor="Hand"                           
                      Margin="0,30,0,0">



                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                  CornerRadius="20"
                                  Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel>
                        <StackPanel>
                            <Button Content="РЕГИСТРАЦИЯ" x:Name="btnRegister" 
                     Command="{Binding SingUp}" Foreground="White"
                      BorderThickness="0"
                    
                      FontSize="12"
                      FontFamily="Montserrat"
                      Cursor="Hand"                           
                      Margin="0,10,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150" Height="40"
                                             CornerRadius="20"
                                             Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0">

                            <TextBlock HorizontalAlignment="Center" Text="Забыли пароль?"
                         Foreground="DarkGray"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0,0,0,0"/>

                       
                        </StackPanel>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Button  Background="Transparent"     Content="Войти как гость"
                                             Foreground="White"
                                             FontSize="12"
                                             FontWeight="Medium"
                                             BorderBrush="Transparent"
                                             FontFamily="Montserrat"
                                             Cursor="Hand"
                                             Margin="0,0,0,0"
                                            Click="PerexodGost"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>

            </Grid>

        </Border>

    </Border>




