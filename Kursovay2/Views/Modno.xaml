        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursovay2.Views"
        mc:Ignorable="d"
        Title="Окно для того что сейчас модно" Height="450" Width="800"
         WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Ширина для меню -->
            <ColumnDefinition Width="*"/>
            <!-- Остальное пространство для основного контента -->
        </Grid.ColumnDefinitions>

        <!-- Меню -->
        <Border Grid.Column="0" Background="LightGray">
            <!-- Здесь можно добавить различные элементы меню -->
            <StackPanel>
                <Button Content="Menu Item 1"/>
                <Button Content="Menu Item 2"/>
                <Button Content="Menu Item 3"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Column="1">
            <!-- Здесь размещается ваш основной контент -->
        </Border>
    </Grid>
