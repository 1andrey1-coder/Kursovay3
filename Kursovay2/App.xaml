<Application x:Class="Kursovay2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kursovay2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Grid" TargetType="Grid">
            <Setter Property="Grid.Background" Value="#6195c9"/>
        </Style>
       
        <Style x:Name="Button" TargetType="Button">
            <Setter Property="Background" Value="	#b5c7e7" />
        </Style>
      
    </Application.Resources>
</Application>
