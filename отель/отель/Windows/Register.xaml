<Window x:Class="отель.Windows.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:отель.Windows"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="300">
    <Grid>
        <StackPanel Width="100" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Margin="5" Content="Имя"/>
            <TextBox x:Name="nametxt" Margin="5" Text="{Binding Login}"/>
            <Label Margin="5" Content="Пароль"/>
            <TextBox x:Name="passwordtxt" Margin="5" Text="{Binding Password}"/>
            <Button Margin="5" Click="AddClietns" Height="20" Content="Регистрация"/>
        </StackPanel>
    </Grid>
</Window>
