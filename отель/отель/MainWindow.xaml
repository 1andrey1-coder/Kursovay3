<Window x:Class="отель.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:отель"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid  VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel  VerticalAlignment="Center"  Width="200">
            <Label Margin="5" Content="Логин" />
            <TextBox Margin="5" x:Name="logintxt" Text="{Binding Login}"/>
            <Label Margin="5" Content="пароль" />
            <PasswordBox Margin="5" x:Name="passwordtxt" />
            <Button Margin="5" Content="Вход" Click="Dxod" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
